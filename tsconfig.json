{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": ".dist",
    "baseUrl": ".",
    "paths": {
      "@authorizers/*": ["src/authorizers/*"],
      "@entities/user/*": ["src/entities/user/*"],
      "@helpers/*": ["src/helpers/*"],
      "@helpers/axios/*": ["src/helpers/axios/*"],
      "@helpers/databases/*": ["src/helpers/databases/*"],
      "@helpers/interfaces/*": ["src/helpers/interfaces/*"],
      "@helpers/types/*": ["src/helpers/types/*"],
      "@i18n/*": ["src/i18n/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@streams/*": ["src/streams/*"],
      "@tasks/*": ["src/tasks/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
